{
    "name": "touist",
    "displayName": "touist",
    "description": "Syntax support for the Touist language for logic",
    "version": "0.0.3",
    "publisher": "maelvalais",
    "icon": "images/touist-logo.svg",
    "engines": {
        "vscode": "^1.10.0"
    },
    "categories": [
        "Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "touist",
            "aliases": ["touist", "touist"],
            "extensions": [".touistl",".touist"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "touist",
            "scopeName": "source.touist",
            "path": "./syntaxes/touist.tmLanguage"
        }],
        "problemMatchers": [{
            "name": "touist",
            "owner": "touist",
            "fileLocation": "relative",
            "pattern": [{
                "regexp": "^([^:]+): line (\\d+), col (\\d+)-(\\d+): (error|warning): (.*)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "endColumn": 4,
                "severity": 5,
                "message": 6
            }]
      }]
    },
    "dependencies": {
        "watch": "latest"
    },
    "scripts" : {
        "postinstall": "cd build; npm install",
        "start": "watch \"cd build && node build.js\" syntaxes/"
    }
}
